<Window
  x:Class="Source.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:Source"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="MainWindow"
  Width="800"
  Height="450"
  mc:Ignorable="d">
  <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
    <Border
      Padding="48,16"
      HorizontalAlignment="Center"
      VerticalAlignment="Center"
      Background="Aqua"
      BorderBrush="#FF000000"
      BorderThickness="5"
      CornerRadius="16"
      MouseDown="Border_MouseDown"
      MouseUp="Border_MouseUp">
      <TextBlock
        x:Name="messageTextBlock"
        Background="Gray"
        FontSize="48"
        MouseDown="MessageTextBlock_MouseDown"
        MouseUp="MessageTextBlock_MouseUp"
        Text="Hello world" />
    </Border>

    <TextBlock
      Margin="0,16,0,0"
      HorizontalAlignment="Center"
      FontSize="14">
      Click to open<Run />
      <Hyperlink NavigateUri="https://www.google.com" RequestNavigate="Hyperlink_RequestNavigate">
        <Span FontFamily="Comic Sans MS">
          <Bold>
            <Italic>
              Google
            </Italic>
          </Bold>
        </Span>
      </Hyperlink>
    </TextBlock>

    <TextBlock TextTrimming="CharacterEllipsis">
      This text will overflow off the screennnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnn - Hello again
    </TextBlock>
  </StackPanel>
</Window>
